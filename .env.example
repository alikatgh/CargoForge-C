# CargoForge Production Configuration

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cargoforge
# For SQLite (development): sqlite:///cargoforge.db

# Flask
FLASK_APP=web/backend/app_prod.py
FLASK_ENV=production

# Rate Limiting (Redis)
REDIS_URL=redis://localhost:6379/0

# Email (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Payment (Stripe)
STRIPE_PUBLIC_KEY=pk_live_your_key_here
STRIPE_SECRET_KEY=sk_live_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Monitoring (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Domain
DOMAIN=cargoforge.com
ALLOWED_ORIGINS=https://cargoforge.com,https://www.cargoforge.com

# Features
ENABLE_REGISTRATION=true
ENABLE_API=true
REQUIRE_EMAIL_VERIFICATION=false

# Limits
FREE_TIER_DAILY_LIMIT=10
PRO_TIER_DAILY_LIMIT=1000
ENTERPRISE_TIER_DAILY_LIMIT=10000

# Storage (for file uploads)
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_S3_BUCKET=cargoforge-uploads
AWS_REGION=us-east-1
